<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sellerbackgroundcolor"
    tools:context=".ViewProducts">

    <Spinner
        android:id="@+id/FilterByStatus"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:entries="@array/filterByStatus" />
    <ListView
        android:id="@+id/listaAktivnosti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FilterByStatus"
        android:dividerHeight="3dp"
        android:listSelector="@drawable/list_color_selector"/>
</RelativeLayout>