<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetails"
    android:background="@drawable/color_background">
    <RelativeLayout
        android:id="@+id/imageViewproductDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="280dp"
            android:layout_height="232dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/tipProductDetali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageViewproductDetails"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/productLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="Title"
            android:textColor="#E6E6FA"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/productRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#E6E6FA"
            android:layout_toRightOf="@+id/productLeft"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/descriptionProductDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tipProductDetali"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/descriptionProductLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#E6E6FA"
            android:text="Description"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/descriptionProductRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#E6E6FA"
            android:layout_toRightOf="@+id/descriptionProductLeft"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/priceProductDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/descriptionProductDetails"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/priceProductLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="Price: $"
            android:textColor="#E6E6FA"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/priceProductRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#E6E6FA"
            android:layout_toRightOf="@+id/priceProductLeft"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/dateDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/priceProductDetails"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/dateLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#E6E6FA"
            android:text="Date:"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/dateRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#E6E6FA"
            android:layout_toRightOf="@+id/dateLeft"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/timeProductDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dateDetails"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/timeProductLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#E6E6FA"
            android:text="Time:"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/timeProductRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#E6E6FA"
            android:layout_toRightOf="@+id/timeProductLeft"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/statusDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/timeProductDetails"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/statusLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="Status:"
            android:textColor="#E6E6FA"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/statusRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#E6E6FA"
            android:layout_toRightOf="@+id/statusLeft"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/userDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/statusDetails"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/userLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="User:"
            android:textColor="#E6E6FA"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/userRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/userLeft"
            android:textColor="#E6E6FA"
            android:textSize="19sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emailUserDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/userDetails"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/emailUserLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="User's email:"
            android:textColor="#E6E6FA"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/emailUserRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#E6E6FA"
            android:layout_toRightOf="@+id/emailUserLeft"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/addressUserDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/emailUserDetails"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/addressUserLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="User's address:"
            android:textColor="#E6E6FA"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/addressUserRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#E6E6FA"
            android:layout_toRightOf="@+id/addressUserLeft"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/prifati"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Accept"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/addressUserDetails"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/otkazi"
        android:backgroundTint="#57c84d"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/otkazi"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Decline"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/addressUserDetails"
        app:layout_constraintLeft_toRightOf="@+id/prifati"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="#FF0000"
        android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>